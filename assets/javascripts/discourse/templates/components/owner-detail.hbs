<div class="detail-title">
  {{owner-logo owner label=true linked=true class="medium"}}

  <div class="detail-links">
    <a href={{owner.url}} class="detail-link" target="_blank" rel="noopener noreferrer" title={{typeTitle}}>
      {{d-icon "fab-github"}}
    </a>
  </div>
</div>

{{#if hasMetadata}}
  <ul class="detail-metadata">
    {{#if owner.description}}
      <li>
        <label class="detail-label">{{i18n "plugin_manager.plugin.owner.description"}}</label>
        <span class="detail-value">{{owner.description}}</span>
      </li>
    {{/if}}
  </ul>
{{/if}}

{{#if hasActions}}
  <div class="detail-actions">
    {{#if owner.website}}
      {{action-link url=owner.website icon="globe" labelKey="plugin_manager.plugin.owner.website"}}
    {{/if}}

    {{#if owner.email}}
      {{action-link url=mailtoUrl icon="envelope" labelKey="plugin_manager.plugin.owner.email"}}
    {{/if}}
  </div>
{{/if}}
