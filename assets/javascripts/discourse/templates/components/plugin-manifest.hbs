<div class="plugin-filters">
  {{discourse-status discourse=discourse}}

  <div class="text-filter">
    <label class="detail-label">{{i18n "plugin_manager.plugin.filter.label"}}</label>
    {{input type="text" value=filter placeholder=(i18n "plugin_manager.plugin.filter.placeholder")}}
  </div>
</div>

{{#if plugins}}
  {{#load-more selector="table.plugin-manifest-table tr" action=(action "loadMore")}}
    <table class="table plugin-manifest-table grid">
      <thead>
        {{table-header-toggle field="plugin_name" labelKey="plugin_manager.plugin.title" order=order asc=asc automatic=true}}
        <th><span class="header-contents">{{i18n "plugin_manager.plugin.status.label"}}</span></th>
      </thead>
      <tbody>
        {{#each plugins as |plugin|}}
          {{plugin-status plugin=plugin discourse=discourse}}
        {{/each}}
      </tbody>
    </table>
  {{/load-more}}

  {{conditional-loading-spinner condition=loading}}
{{else}}
  <p>{{i18n "search.no_results"}}</p>
{{/if}}
