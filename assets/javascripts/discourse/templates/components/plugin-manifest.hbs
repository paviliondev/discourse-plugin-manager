{{input type="text" value=filter placeholder=(i18n 'server_status.plugin.filter')}}

{{#if plugins}}
  {{#load-more selector=".group-members tr" action=(action "loadMore")}}
    <table class="table plugin-manifest-table grid">
      <thead>
        <th>{{i18n "server_status.plugin.title"}}</th>
        <th>{{i18n "server_status.plugin.owner.label"}}</th>
        <th>{{i18n "server_status.plugin.status"}}</th>
        <th>{{i18n "server_status.plugin.actions"}}</th>
      </thead>
      <tbody>
        {{#each plugins as |plugin|}}
          {{plugin-status plugin=plugin discourse=discourse}}
        {{/each}}
      </tbody>
    </table>
  {{/load-more}}

  {{conditional-loading-spinner condition=loading}}
{{else}}
  <p>{{i18n "search.no_results"}}</p>
{{/if}}