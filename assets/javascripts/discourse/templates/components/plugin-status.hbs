<td class="name">
  <div class="name-container">
    <a {{action "togglePluginDetail"}} class="btn-plugin" role="button">
      <span classs="name-label">{{plugin.display_name}}</span>
    </a>

    {{#if showPluginDetail}}
      {{plugin-detail plugin=plugin manifest=true}}
    {{/if}}
  </div>
</td>

<td class="owner">
  <div class="owner-container">
    {{#if plugin.owner}}
      <button class="btn-owner-logo btn-plugin" {{action "toggleOwnerDetail"}} type="button">
        {{owner-logo plugin.owner label=true}}
      </button>

      {{#if showOwnerDetail}}
        {{owner-detail owner=plugin.owner}}
      {{/if}}
    {{/if}}
  </div>
</td>

<td class="status">
  <div class="status-container">
    {{plugin-status-button plugin=plugin discourse=discourse}}
  </div>
</td>

<td class="category">
  {{#if pluginCategory}}
    <a role="button" {{action "goToCategory"}} class="go-to-category">
      <span>{{i18n "server_status.plugin.more"}}</span>
      {{d-icon "angle-right"}}
    </a>
  {{/if}}
</td>
