<div class="top">
  <div class="left">    
    {{discourse-status
      status=discourseStatus
      pluginCounts=pluginCounts}}
  </div>
  
  <div class="buttons">
    {{#if updateTopic.event}}
      <a href="{{updateTopic.url}}" class="{{updateClass}}">
        <span>{{i18n updateTitle}}</span>
        <div class="event">{{event-label updateTopic.event list=true}}</div>
      </a>
    {{/if}}
    
    <a href="https://thepavilion.io/w/bug-report" class="btn btn-default" target="_blank">
      {{d-icon "bug"}}
      <span class="d-button-label">
        {{i18n "discourse_server_status.bug_report"}}
      </span>
    </a>
  </div>
</div>

<div class="bottom {{bottomClass}}">
  {{plugin-statuses
    type="plugins"
    plugins=compatiablePlugins
    discourseStatus=discourseStatus}}
  
  {{#if incompatiblePlugins}}
    {{plugin-statuses
      type="incompatible_plugins"
      plugins=incompatiblePlugins
      discourseStatus=discourseStatus}}
  {{/if}}
</div>