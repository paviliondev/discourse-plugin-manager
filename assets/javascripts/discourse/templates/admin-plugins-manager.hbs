<div class="plugin-manager-title">
  <h3>{{i18n "admin.plugin_manager.title"}}</h3>
  <div class="plugin-manager-buttons">
    {{d-button
      action=(action "addPlugin")
      icon="plus"
      label="admin.plugin_manager.plugin.add"
      title="admin.plugin_manager.plugin.add"}}
  </div>
</div>

<div class="plugin-manager-plugins">
  <table class="grid">
    <thead>
      <th>{{i18n "admin.plugin_manager.plugin.title"}}</th>
      <th>{{i18n "admin.plugin_manager.plugin.support_category"}}</th>
      <th>{{i18n "admin.plugin_manager.plugin.documentation_category"}}</th>
      <th>{{i18n "admin.plugin_manager.plugin.maintainers"}}</th>
      <th>{{i18n "admin.plugin_manager.plugin.controls"}}</th>
    </thead>
    <tbody>
      {{#each plugins as |plugin|}}
        <tr>
          <td class="plugin-name">{{plugin.display_name}}</td>
          <td class="plugin-support-category">{{category-link plugin.supportCategory}}</td>
          <td class="plugin-documentation-category">{{category-link plugin.documentationCategory}}</td>
          <td class="plugin-maintainers">{{plugin.maintainers}}</td>
          <td class="plugin-controls">
            {{d-button
              icon="pencil-alt"
              label="admin.plugin_manager.plugin.edit"
              title="admin.plugin_manager.plugin.edit"
              action=(action "editPlugin")
              actionParam=plugin}}
            {{d-button
              action=(action "removePlugin")
              actionParam=plugin
              label="admin.plugin_manager.plugin.remove"
              title="admin.plugin_manager.plugin.remove"
              icon="times"
              class="destroy"}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
